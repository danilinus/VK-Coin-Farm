<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="15dp"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Подробности"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/about_d_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Ваша скорость добычи:"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_cursor"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/cursor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="КУРСОР"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorCursor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cursor_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_videocard"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/videocard_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ВИДЕОКАРТА"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorVideoCard"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/videocard_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_videocards"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/videocards_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="СТОЙКА ВИДЕОКАРТ"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorVideoCards"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/videocards_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_super_pc"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/super_computer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="СУПЕРКОМПЬЮТЕР"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorSuperPC"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/super_computer_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_server_vk"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/server_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="СЕРВЕР ВК"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorServerVK"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/server_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_quantum_pc"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/quantum_computer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="КВАНТОВЫЙ КОМПЬЮТЕР"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorQuantumPC"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/quantum_computer_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_sector">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grid_datacenter"
                    android:layout_margin="15dp"/>

                <TextView
                    android:id="@+id/datacenter_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ДАТАЦЕНТР"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorDataCenter"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/datacenter_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="6dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="3dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="x0"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>